  // æ›´æ–°æ–‡æ¡£ç±»å‹ç»Ÿè®¡
  private async updateDocumentTypes(documents: DocumentItem[]): Promise<void> {
    try {
      const typeCount = new Map<string, number>()
      
      // ç»Ÿè®¡å„ç±»å‹æ–‡æ¡£æ•°é‡
      documents.forEach(doc => {
